<div class="simple-comp-container container overflow-auto" id="simplecomp">
  <div class="row d-flex" data-controller="item-comp">
    <h2 class="text-center">Comparer mes petits gestes</h2>
    <div class="col-12 col-lg-6 w-50 d-flex flex-wrap"><% @measurements.each do |measurement| %> <div class="d-flex-inline" data-controller="source-flip">
        <p class="text-center m-1 item-element" data-item-comp-target="item" data-source-flip-target="element" data-action="click->item-comp#selected"><%= measurement.title.first%> <br><%= measurement.title[1..] %>
          <i class="d-none"><%= measurement.kgCO2e_year %> </i>
          <i class="d-none"><%= measurement.eq_minutes_flight_jet_bollore %> </i>
          <i class="d-none"><%= measurement.eq_km_yacht_arnault %> </i>
        </p>
        <p class="text-center m-1 item-element d-none" data-source-flip-target="source"> 🗂 <br>
          <strong><%= measurement.source_name%> </strong>: <a href="https://www.<%= measurement.source_link%>" target="_blank"><%= measurement.source_link%> </a>
        </p>
        <p class="text-center m-1 item-element d-none" data-source-flip-target="infos"><%= measurement.additional_info%> </p>
        <div class="d-flex justify-content-center">
          <p class="mx-2" data-action="click->source-flip#return">🔁</p><% if measurement.additional_info %> <p class="mx-2" data-action="click->source-flip#infos">ℹ️</p><% end %>
        </div>

      </div><% end %> </div>

    <div class="col-12 col-lg-6 w-50 simple-comp-result">
      <p class="text-center my-5 pt-3" data-item-comp-target="result">Cochez une ou plusieurs cases pour estimer vos économies carbone</p>
      </p>
      <div data-controller="find-rep" id="contactrep" class="d-none" data-item-comp-target="rep">
        <form class="row justify-content-center">
        <div class="col-6">
          <input id="search-input" type="text" class="form-control" data-find-rep-target="input" placeholder="Tapez votre adresse">
        </div>
        <div class="col-2">
          <input type="submit" class="btn btn-flat" data-action="click->find-rep#find" value="Rechercher">
        </div>
        </form>
       <div class="row justify-content-center my-5">
        <div class="col-6">
        <p data-find-rep-target="represult"></p>
       </div>
      <a class="d-none" data-find-rep-target='textlink' href="" target="_blank"> Tweet</a>
      <p class="d-none" data-item-comp-target="tweettext" data-find-rep-target='twitterhandletext'></p>
    </div>
  </div>
</div>
