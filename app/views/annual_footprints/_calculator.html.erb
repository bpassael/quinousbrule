 <h2 class="text-center my-5">Calculer mon empreinte carbone annuelle</h2>
 <div class="container my-5 bg-white rounded">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-6">
        <div id="carouselExampleIndicators" class="carousel slide">
          <%# <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
          </div> %>
          <div class="carousel-inner">
          <%= simple_form_for @footprint,  data: { turbo: false }  do |f| %>
            <div class="carousel-item active justify-center-center">
            <h5 class="my-5">Je me déplace</h5>
              <div class="caroussel-fixed overflow-auto">
              <%= f.input :input_transport_plane, label: "Prenez-vous l'avion ?" %>
              <%= f.input :input_transport_flights_short, label: "Combien de vols domestiques aller-retour effectuez-vous dans l'année ? (ex: Bordeaux-Lyon)"%>
              <%= f.input :input_transport_flights_middle, label: "Combien de vols moyen courrier aller-retour effectuez-vous dans l'année ? (ex: Paris-Ibiza)" %>
              <%= f.input :input_transport_flights_long, label: "Combien de vols long courrier aller-retour effectuez-vous dans l'année ? (ex: Nice-Hanoï)" %>
              <%= f.input :input_transport_car, label: "Utilisez-vous une voiture (covoiturage compris) ?" %>
              <%= f.input :input_transport_car_type, label: "Quel type de voiture ?", collection: ["Petite", "Moyenne", "Berline", "SUV"] %>
              <%= f.input :input_transport_car_carburant, label: "Quel type de carburant ?", collection: ["Thermique", "Hybride", "Electrique"]%>
              <%= f.input :input_transport_car_age, label: "Quel âge a la voiture (en années ?)" %>
              <%= f.input :input_transport_car_passengers, label: "Combien de passagers en moyenne ?" %>
              <%= f.input :input_transport_car_km, label: "Combien de km parcourus sur l'année ?" %>
              <div class="d-flex justify-content-center">
                    <i class="btn-caroussel-next mx-2" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    Suivant
                    </i>
              </div>
              </div>
            </div>
            <div class="carousel-item justify-center-center">
            <h5>Je me déplace -2</h5>
              <div class="caroussel-fixed overflow-auto">
              <%= f.input :input_transport_two_wheels, label: "Avez-vous une scooter ou une moto ?", collection: ["Rien", "Scooter ou moto < 250", "Moto > 250", "Les deux"] %>
              <%= f.input :input_transport_scooter_km, label: "Combien de km parcourez-vous en scooter ou moto < 250 chaque année ?" %>
              <%= f.input :input_transport_moto_km, label: "Combien de km parcourez-vous en moto > 250 chaque année ?" %>
              <%= f.input :input_transport_train, label: "Prenez-vous le train ?" %>
              <%= f.input :input_transport_train_trips_short, label: "Combien de courts trajets effectuez-vous dans l'année ? (ex: Cannes-Nice)" %>
              <%= f.input :input_transport_train_trips_middle, label: "Combien de moyens trajets effectuez-vous dans l'année ? (ex: Paris-Clermont)" %>
              <%= f.input :input_transport_train_trips_long, label: "Combien de longs trajets effectuez-vous dans l'année ? (ex: Lille-Nice)" %>
              <%= f.input :input_transport_bus_hours_week, label: "Combien d'heures passez-vous dans le bus chaque semaine ?" %>
              <%= f.input :input_transport_metro_tram_hours_week, label: "Combien d'heures passez-vous dans le métro/tram chaque semaine ?" %>
              <div class="d-flex justify-content-center">
                    <i class="btn-caroussel-prev mx-2" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    Précédent
                    </i>
                    <i class="btn-caroussel-next mx-2" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    Suivant
                    </i>
              </div>
              </div>
            </div>
            <div class="carousel-item">
            <h5>Je me loge</h5>
              <div class="caroussel-fixed overflow-auto">
              <%= f.input :input_home_surface, label: "Quelle est la surface en m2 de votre logement ?" %>
              <%= f.input :input_home_old, label: "Votre logement a t'il plus de 50 ans ?" %>
              <%= f.input :input_home_type, label: "Quel type de logement ?", collection: ["Appartement", "Maison", "Maison eco-construite"] %>
              <%= f.input :input_home_heat_type, label: "Comment est chauffé votre logement ?", collection: ["Electricité ou pompe à chaleur", "Gaz", "Fioul", "Bois"] %>
              <%= f.input :input_home_elec_monthly_bill, label: "Quelle est votre dépense moyenne en électricité par mois ?" %>
              <%= f.input :input_home_heat_bill, label: "Quel est votre dépense moyenne en chauffage (gaz, fioul ou bois) par mois ?" %>
              <%= f.input :input_home_users, label: "Combien de personnes vivent en moyenne dans votre logement ?" %>
              <div class="d-flex justify-content-center">
                    <i class="btn-caroussel-prev mx-2" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    Précédent
                    </i>
                    <i class="btn-caroussel-next mx-2" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    Suivant
                    </i>
              </div>
              </div>
            </div>
            <div class="carousel-item">
            <h5>Je consomme</h5>
              <div class="caroussel-fixed overflow-auto">
              <%= f.input :input_food_diet, label: "Comment décririez vous votre régime alimentaire ?", collection: ["Vegan", "Végétarien", "Pescitarien", "Je mange peu de viande", "Alimentation mixte", "Je mange beaucoup de viande"] %>
              <%= f.input :input_food_bottled_water, label: "Consommez-vous de l'eau en bouteille ?" %>
              <%= f.input :input_food_waste, label: "Pour vos déchets", collection: ["Je suis zéro déchet", "Je composte", "Je réduis le gaspillage alimentaire", "Je ne fais rien de particulier"] %>
              <%= f.input :input_consumption_tech, label: "Combien avez-vous d'appareils numériques de moins de 10 ans ?", collection: ["Beaucoup", "Moyennement", "Peu"] %>
              <%= f.input :input_consumption_appliances, label: "Combien avez-vous d'électroménager de moins de 10 ans ?", collection: ["Beaucoup", "Moyennement", "Peu"] %>
              <%= f.input :input_consumption_clothing, label: "Achetez-vous souvent des vêtements neufs ?", collection: ["Très souvent", "Régulièrement", "Occasionnellement", "Rarement"] %>
              <%= f.submit %>
              <div class="d-flex justify-content-center">
                    <i class="btn-caroussel-prev mx-2" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    Précédent
                    </i>
              </div>
              </div>
            <% end %>
            </div>
          </div>
          <%# <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button> %>
        </div>
      </div>
    </div>
  </div>
