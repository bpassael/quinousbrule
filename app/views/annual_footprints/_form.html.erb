<h1>TEST FORM</h1>

<%= simple_form_for @footprint,  data: { turbo: false }  do |f| %>
  <%= f.input :input_transport_plane %>
  <%= f.input :input_transport_flights_short %>
  <%= f.input :input_transport_flights_middle %>
  <%= f.input :input_transport_flights_long %>
  <%= f.input :input_transport_car %>
  <%= f.input :input_transport_car_type, collection: ["Petite", "Moyenne", "Berline", "SUV"] %>
  <%= f.input :input_transport_car_carburant, collection: ["Thermique", "Hybride", "Electrique"]%>
  <%= f.input :input_transport_car_age %>
  <%= f.input :input_transport_car_passengers %>
  <%= f.input :input_transport_car_km %>
  <%= f.input :input_transport_two_wheels, collection: ["Rien", "Scooter ou moto < 250", "Moto > 250", "Les deux"] %>
  <%= f.input :input_transport_scooter_km %>
  <%= f.input :input_transport_moto_km %>
  <%= f.input :input_transport_train %>
  <%= f.input :input_transport_train_trips_short %>
  <%= f.input :input_transport_train_trips_middle %>
  <%= f.input :input_transport_train_trips_long %>
  <%= f.input :input_transport_bus_hours_week %>
  <%= f.input :input_transport_metro_tram_hours_week %>
  <%= f.input :input_home_surface %>
  <%= f.input :input_home_old %>
  <%= f.input :input_home_type, collection: ["Appartement", "Maison", "Maison eco-construite"] %>
  <%= f.input :input_home_heat_type, collection: ["Electricité ou pompe à chaleur", "Gaz", "Fioul", "Bois"] %>
  <%= f.input :input_home_elec_monthly_bill %>
  <%= f.input :input_home_heat_bill %>
  <%= f.input :input_home_users %>
  <%= f.input :input_food_diet, collection: ["Vegan", "Végétarien", "Pescitarien", "Je mange peu de viande", "Alimentation mixte", "Je mange beaucoup de viande"] %>
  <%= f.input :input_food_bottled_water %>
  <%= f.input :input_food_waste, collection: ["Je suis zéro déchet", "Je composte", "Je réduis le gaspillage alimentaire", "Je ne fais rien de particulier"] %>
  <%= f.input :input_consumption_tech, collection: ["Beaucoup", "Moyennement", "Peu"] %>
  <%= f.input :input_consumption_appliances, collection: ["Beaucoup", "Moyennement", "Peu"] %>
  <%= f.input :input_consumption_clothing, collection: ["Très souvent", "Régulièrement", "Occasionnellement", "Rarement"] %>

  <%= f.submit %>
<% end %>

<p>Votre empreinte carbone : <%= AnnualFootprint.last.annual_footprint_kgCO2e %></p>
